{
  "manifest_version": 3,
  "name": "UniversalAdMute Controller",
  "version": "1.0",
  "description": "Control the UniversalAdMute application.",
  "permissions": [],
  "host_permissions": ["http://127.0.0.1:32542/*"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
